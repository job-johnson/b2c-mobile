<?php $_orders = $this->getOrders(); ?>
<h3 class="recent-orders-title">RECENT ORDERS<?php if( sizeof($_orders->getItems()) > 0 ): ?><a href="<?php echo $this->getUrl('sales/order/history') ?>"><?php echo $this->__('View All') ?></a><?php endif; ?></h3>
<div class="product-sku-order product-sku-invoices shipment-invoices">
<?php  if( sizeof($_orders->getItems()) > 0 ):?>

      <ul class="items-product-order my-order-items">
          <table>
              <tr>
                  <th>Order #</th>
                  <th>Date</th>
                  <th>Ship To</th>
                  <th class="total"><span class="nobr"><?php echo $this->__('Order Total') ?></span></th>
                  <th>Order Status</th>
                  <th></th>
              </tr>
                <?php foreach ($_orders as $_order): ?>
              <tr>
                  <td><?php echo $_order->getRealOrderId() ?></td>
                  <td><?php echo $this->formatDate($_order->getCreatedAtStoreDate()) ?></td>
                  <td><?php echo $_order->getShippingAddress() ? $this->escapeHtml($_order->getShippingAddress()->getName()) : '&nbsp;' ?></td>
                  <td><?php echo $_order->formatPrice($_order->getGrandTotal()) ?></td>
                  <td><?php echo $_order->getStatusLabel() ?></td>
                  <td><a href="<?php echo $this->getViewUrl($_order) ?>">View Order</a></td>
              </tr>
                  <?php endforeach;

                ?>

          </table>
      </ul>
    <?php else: ?>
        <p><?php echo $this->__('You have placed no orders.'); ?></p>
    <?php endif; ?>
  </div>
